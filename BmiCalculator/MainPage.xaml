<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BmiCalculator.MainPage"
             xmlns:local="clr-namespace:BmiCalculator"
             Title="BMI Calculator">

    <ScrollView>
        <VerticalStackLayout
            HorizontalOptions="Center"
            VerticalOptions="CenterAndExpand">
            <Entry x:Name="HeightEntry"
                   Placeholder="Enter your height in cenimeters"
                   WidthRequest="300"
                   HorizontalTextAlignment="Center"
                   Margin="0,10,0,10" />
            <Entry x:Name="WeightEntry"
                   Placeholder="Enter your weight in kilograms"
                   WidthRequest="300"
                   HorizontalTextAlignment="Center"
                   Margin="0,10,0,10" />
            <Label x:Name="lblAnswer"
                   Text="Your BMI is: "
                   WidthRequest="400"
                   HorizontalTextAlignment="Center"
                   Margin="0,10,0,10" />
            <Button x:Name="btnCalculate"
                    Text="Calculate"
                    Clicked="btnCalculate_Clicked"
                    WidthRequest="150"
                    Margin="0,10,0,10" />
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
