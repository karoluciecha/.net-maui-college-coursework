<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:WordleApp.Views"
       x:Class="WordleApp.AppShell">

    <!-- Register routes -->
    <ShellContent Title="Start" Route="StartScreen" ContentTemplate="{DataTemplate local:StartScreen}" />
    <ShellContent Title="Game" Route="GameScreen" ContentTemplate="{DataTemplate local:GameScreen}" />
    <ShellContent Title="History" Route="HistoryScreen" ContentTemplate="{DataTemplate local:HistoryScreen}" />
    <ShellContent Title="Settings" Route="SettingsScreen" ContentTemplate="{DataTemplate local:SettingsScreen}" />

</Shell>